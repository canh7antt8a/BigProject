<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_item_order"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/capuchino"/>

            <LinearLayout
                android:gravity="bottom"
                android:background="@color/black"
                android:layout_alignBottom="@+id/imv_item_order"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imv_start_item_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_half_black_24dp"/>
                    <TextView
                        android:id="@+id/tv_rate_number_rate_order_item"
                        android:textSize="@dimen/sp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="4"/>
                    <ImageView
                        android:padding="@dimen/dp_10"
                        android:id="@+id/imv_menu_item_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:gravity="bottom"
                    android:layout_alignBottom="@+id/imv_item_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/tv_name_drink_order_item"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:text="@string/name_drink"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv_price_item_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:paddingRight="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/tv_price_number_item_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="20.000"
                            android:layout_toRightOf="@+id/tv_price_item_order"
                            />
                        <RatingBar
                            android:id="@+id/rb_item_order"
                            android:layout_alignRight="@+id/tv_price_number_item_order"
                            android:rating="0"
                            android:stepSize="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/RatingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/imgbtn_cmt_item_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chat"
                            android:background="@color/black"/>
                        <TextView
                            android:layout_toRightOf="@+id/imgbtn_cmt_item_order"
                            android:textColor="@color/white"
                            android:id="@+id/tv_number_comment_item_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:paddingLeft="@dimen/dp_5"/>
                        <TextView
                            android:id="@+id/tv_status_item_drink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_still_sell"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/green_light"/>
                </RelativeLayout>
                    <ImageView
                        android:id="@+id/imv_cart_item_order"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_shopping_cart"/>
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>